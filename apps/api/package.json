{
  "name": "@ehpr/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "echo \"Building @ehpr/api\" && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "nest start --exec \"node -r ./env.js\"",
    "start:dev:local": "nest start --preserveWatchOutput --watch --exec \"node -r ./env.js\"",
    "start:debug:local": "nest start --debug --watch --exec \"node -r ./env.js\"",
    "lint": "echo 'Linting @ehpr/api...' && eslint --fix --cache \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./jest-e2e.json --runInBand",
    "typeorm": "typeorm-ts-node-commonjs ",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/ormconfig.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/ormconfig.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/ormconfig.ts",
    "export-submission": "NODE_ENV=script node -r ts-node/register -r tsconfig-paths/register src/cron.ts"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.873.0",
    "@ehpr/common": "1.0.1",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/throttler": "6.4.0",
    "@nestjs/typeorm": "11.0.0",
    "@supercharge/promise-pool": "3.2.0",
    "@vendia/serverless-express": "4.12.6",
    "axios": "1.11.0",
    "class-transformer": "0.5.1",
    "csv-stringify": "6.6.0",
    "csv-writer": "1.6.0",
    "dayjs": "1.11.13",
    "dotenv": "17.2.1",
    "express": "5.1.0",
    "handlebars": "4.7.8",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.2.0",
    "limiter": "3.0.0",
    "nanoid": "^3.3.7",
    "nest-winston": "1.10.2",
    "nodemailer": "7.0.11",
    "pg": "8.16.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "secure-random-string": "1.1.4",
    "swagger-ui-express": "5.0.1",
    "typeorm": "0.3.26",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.7",
    "@nestjs/testing": "11.1.6",
    "@types/aws-lambda": "8.10.152",
    "@types/express": "5.0.3",
    "@types/js-yaml": "4.0.9",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.3.0",
    "@types/nodemailer": "7.0.1",
    "@types/secure-random-string": "^1.1.3",
    "@types/supertest": "6.0.3",
    "eslint": "9.34.0",
    "jest": "30.0.5",
    "source-map-support": "0.5.21",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".\\**\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
